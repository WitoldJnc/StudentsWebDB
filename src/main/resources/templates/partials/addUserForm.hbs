<input type="hidden" name="id" value="{{#id}}{{id}}{{/id}}">
<div class="form-group">
    <label for="userInput">Username</label>
    <input required class="form-control" id="userInput" type="text" name="username"
           placeholder="{{message "placeholder.username"}}" value="{{#username}}{{username}}{{/username}}">
</div>
<div class="form-group">
    <label for="passInput">Password</label>
    <input required class="form-control" id="passInput" type="text" name="password"
           placeholder="{{message "placeholder.password"}}" value="{{#password}}{{password}}{{/password}}">
    <small id="loginHelp" class="form-text text-muted">{{message "system.passwordNotification"}}</small>
</div>
