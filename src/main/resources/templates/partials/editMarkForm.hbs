{{#if mark}}
    <div class="input-group-prepend mb-1">
        <span class="input-group-text" id="basic-addon1"><label for="mark">
            {{studentId.firstName}} {{studentId.lastName}} :</label></span>
    </div>
    <div class="form-group mb-1 ">
        <input class="form-control" required type="text" name="mark"
               placeholder="{{message "table.mark"}}" value="{{#mark}}{{mark}}{{/mark}}"
               pattern="^(?:[1-9]|0[1-9]|10)$">
    </div>
{{/if}}