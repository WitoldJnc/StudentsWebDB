<input name="id" value="{{#id}}{{id}}{{/id}}" hidden>
<div class="form-group mb-1 ">
    <input class="form-control" required type="text" name="groupNumber"
           placeholder="{{message "table.groupNumber"}}"
           value="{{#groupNumber}}{{groupNumber}}{{/groupNumber}}"
           pattern="\d{1,9}" oninvalid="this.setCustomValidity('{{message "system.onlyNumbers"}}')">
</div>

<div class="form-group mx-sm-1 mb-1">
    <select required name="disciplines" class="form-control" multiple>
        {{#notChosenDiscipline}}
            <option value="{{id}}">{{disciplineName}}</option>
        {{/notChosenDiscipline}}
        {{#editingGroup.disciplines}}
            <option selected value="{{id}}">{{disciplineName}}</option>
        {{/editingGroup.disciplines}}
    </select>
</div>

