<html>
<body>
<a href="/">главная | </a>
<a href="/groups"> группы | </a>
<a href="/students"> студенты | </a>
<a href="/marks"> оценки | </a>
<div>
    <form method="post" action="/addDiscipline">
        <input type="text" name="disciplineName" placeholder="discipline">
        <button type="submit">add discipline</button>
    </form>
</div>
<div>
    {{#anydiscipline}}
        <form method="post" action="/editDiscipline/{{#id}}{{id}}{{/id}}">
            <input name="id" value="{{#id}}{{id}}{{/id}}" hidden>
            <input type="text" name="disciplineName" placeholder="to edit"
                   value="{{#disciplineName}}{{disciplineName}}{{/disciplineName}}">
            <button type="submit">upd group</button>
        </form>
    {{/anydiscipline}}
</div>

<div>Список дисциплин</div>
<div>
    <table>
        <tr>
            <th>id</th>
            <th>название дисциплины</th>
            <th>delete</th>
            <th>edit</th>
        </tr>
        {{#disciplines}}
            <tr>
                <td>{{id}}</td>
                <td>{{#disciplineName}}{{.}}{{/disciplineName}}</td>
                <td><a href="/deleteDiscipline/{{id}}">delete</a></td>
                <td><a href="/editDiscipline/{{id}}">edit</a></td>
            </tr>
        {{/disciplines}}
    </table>

</div>

</body>
</html>

