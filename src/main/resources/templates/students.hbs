<html>
<head>
    <link rel="stylesheet" href="/background.css"/>
    <link rel="stylesheet" href="/tables.css"/>
    <link rel="stylesheet" href="/input.css"/>
</head>
<body>
{{> index}}
<div class="block-outer">
    <div class="block-inner">
        <div class="form-container">
            {{#student}}
                <form method="post" action="/editStudent/{{#id}}{{id}}{{/id}}/patch">
                    {{> partials/addStudentForm}}
                    <button class="submit" type="submit">upd student</button>
                </form>
            {{/student}}
            {{^student}}
                <form method="post" action="studentAdd">
                    {{> partials/addStudentForm}}
                    <button class="submit" type="submit">add student</button>
                </form>
            {{/student}}
        </div>
        <div>
            <form method="post" action="filter">
                <input type="text" name="filter" placeholder="Поиск по имени">
                <button type="submit">find</button>
            </form>

            <div>
                <form method="post" action="filterLastName">
                    <input type="text" name="filterLastName" placeholder="Поиск по фамилии">
                    <button type="submit">find</button>
                </form>
            </div>
        </div>
        <div class="table-name">Список студентов</div>
        <div>
            <table>
                <tr>
                    <th>id</th>
                    <th>Имя</th>
                    <th>Фамиия</th>
                    <th>Номер группы</th>
                    <th>delete</th>
                    <th>edit</th>
                </tr>
                {{#students}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{#firstName}}{{.}}{{/firstName}}</td>
                        <td>{{#lastName}}{{.}}{{/lastName}}</td>
                        <td>{{#group.groupNumber}}{{.}}{{/group.groupNumber}}</td>
                        <td><a href="/delete/{{id}}">delete</a></td>
                        <td><a href="/editStudent/{{id}}">edit</a></td>
                    </tr>
                {{/students}}
            </table>


        </div>
    </div>
</div>

</body>
</html>
